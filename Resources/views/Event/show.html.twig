{% extends 'ACInst3Bundle::admin_layout.html.twig' %}

{% block content_in %}
<h1>Event</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>Start</th>
            <td>{{ entity.start|date("d - m - Y") }}</td>
        </tr>
        <tr>
            <th>End</th>
            <td>{{ entity.end|date("d - m - Y") }}</td>
        </tr>
        <tr>
            <th>Venue</th>
            <td>{{ entity.venue }}</td>
        </tr>
        {% if entity.media %}
        <tr>
            <th>Media</th>
            <td>{{ entity.media.title|title }}</td>
        </tr>
        {% endif %}
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_event') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_event_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('admin_event_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
