{% extends 'ACInst3Bundle::admin_layout.html.twig' %}

{% block content_in %}
<h1>Agenda</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
    </tbody>
</table>

{% if entity.events is defined %}
<ul>
	{% for event in entity.events %}
		<li><a href="{{ path('admin_event_show', { 'id': event.id }) }}">{{event.title}}</a></li>
	{% endfor %}
</ul>
{% endif %}

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_agenda') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_agenda_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('admin_agenda_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}